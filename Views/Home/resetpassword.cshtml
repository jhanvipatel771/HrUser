@model HrUser.Models.ResetPassword

@{
    ViewData["Title"] = "forgetpassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="#" class="logo" target="_blank">
    <img src="~/Content/Images/Exigotech-Logo-icon1.png" alt="">
</a>
<div class="section">
    <div class="container">
        <div class="row full-height justify-content-center">
            <div class="col-12 text-center align-self-center py-5">
                <div class="section pb-5 pt-5 pt-sm-2 text-center">
                    <div class="card-3d-wrap mx-auto">
                             <div class="card-3d-wrapper">
                                  <div class="card-front" style="background-color:#4268D6;">
                                       <div class="center-wrap">
                                            <div class="section text-center">
                                                <h4 class="mb-4 pb-3">Forget Password</h4>
                                                    <form asp-action="resetpassword" method="post">
                                                        <div asp-validation-summary="All" class="text-danger"></div>
                                                        <input asp-for="Token" type="hidden" />
                                                        <input asp-for="Email" type="hidden" />
                                                             <div class="form-group">
                                                                <label asp-for="Password" class="control-label"></label>
                                                                <input asp-for="Password" class="form-control" />
                                                                <i class="input-icon uil uil-lock-alt"></i>
                                                                <span asp-validation-for="Password" class="text-danger"></span>
                                                            </div>

                                                            <div class="form-group">
                                                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                                                <input asp-for="ConfirmPassword" class="form-control" />
                                                                <i class="input-icon uil uil-lock-alt"></i>
                                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                            </div>

                                                            <div class="form-group">
                                                                <input type="submit" value="Reset" class="btn mt-4" />
                                                            </div>
                                                    </form>
                                           </div>
                                      </div>
                                 </div>
                            </div>
                        </div>
                   </div>
               </div>
          </div>
     </div>
</div>

