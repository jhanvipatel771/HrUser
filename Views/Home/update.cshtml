@model HrUser.Models.UpdateView
@{
    ViewData["Title"] = "EXIGOTECH-Update Profile";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<div class="main-body">
                    <div class="row">
                        <div class="col-xl-4">
                            <!-- Profile picture card-->
                            <div class="card mb-4 mb-xl-0">
                                <div class="card-header">Profile Picture</div>
                                <div class="card-body text-center">
                                    <!-- Profile picture image-->
                                    <img class="img-account-profile rounded-circle mb-2" src="~/img/undraw_profile_1.svg" alt="">
                                    <!-- Profile picture help block-->
                                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                                    <!-- Profile picture upload button-->
                                    <input class="btn btn-primary" type="file" style="background-color:#456AD8">Upload new image</input>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-8">
                            <!-- Account details card-->
                            <div class="card mb-4">
                                <div class="card-header">Account Details</div>
                                <div class="card-body">
                                    <form asp-controller="Home" asp-action="update" method="post">

                                         @Html.AntiForgeryToken()

                                        <!-- Form Group (username)-->
                                        <div class="mb-3">
                                            <label class="small mb-1" asp-for="Name">Username</label>
                                            <input asp-for="Name" class="form-control" placeholder="Enter your username">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <!-- Form Row-->
                                        <div class="row gx-3 mb-3">
                                            <!-- Form Group (Blood Group)-->
                                            <div class="col-md-6">
                                                <label class="small mb-1" asp-for="Bldgroup">Blood Group</label>
                                                <input class="form-control" asp-for="Bldgroup" placeholder="Enter your Blood Group">
                                                <span asp-validation-for="Bldgroup" class="text-danger"></span>
                                            </div>
                                            <!-- Form Group (Nationality)-->
                                            <div class="col-md-6" asp-for="Nationality">
                                                <label class="small mb-1">Nationality</label>
                                                <input class="form-control" asp-for="Nationality" placeholder="Enter your Nationality">
                                                <span asp-validation-for="Nationality" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <!-- Form Group (email address)-->
                                        <div class="mb-3">
                                            <label class="small mb-1" asp-for="Email">Email Address</label>
                                            <input class="form-control" asp-for="Email" placeholder="Enter your email address">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <!-- Form Group (Home address)-->
                                        <div class="mb-3">
                                            <label class="small mb-1" asp-for="Homeaddress">Residential address</label>
                                            <input class="form-control" asp-for="Homeaddress" placeholder="Enter your Home address">
                                            <span asp-validation-for="Homeaddress" class="text-danger"></span>
                                        </div>
                                        <!-- Form Row-->
                                        <div class="row gx-3 mb-3">
                                            <!-- Form Group (phone number)-->
                                            <div class="col-md-6">
                                                <label class="small mb-1" asp-for="PhoneNumber">Phone number</label>
                                                <input class="form-control" asp-for="PhoneNumber" placeholder="Enter your phone number">
                                                <span asp-validation-for="PhoneNumber" class="text-danger"></span> 
                                            </div>
                                            <!-- Form Group (birthday)-->
                                            <div class="col-md-6">
                                                <label class="small mb-1" asp-for="Birthday">Birthday</label>
                                                <input class="form-control" asp-for="Birthday" type="date" placeholder="Enter your birthday">
                                                <span asp-validation-for="Birthday" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <!-- Save changes button-->
                                        <button type="submit" class="btn btn-primary" style="background-color: #456AD8;" asp-action="profile">Save changes</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>