@model HrUser.Models.ChangePasswordView

@{
    ViewData["Title"] = "EXIGOTECH-Change Password";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<div class="main-body">
                    <div class="row">
                        <div class="col-xl-4">
                            <!-- Profile picture card-->
                            <div class="card mb-4 mb-xl-0">
                                <div class="card-header"></div>
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img src="~/img/undraw_profile_1.svg" alt="Admin" class="rounded-circle" width="150">
                                        <div class="mt-3">
                                            <h4>Jhanvi</h4>
                                            <p class="text-secondary mb-1">Full Stack Developer</p>
                                            <p class="text-muted font-size-sm">Exigotech, Baroda, India</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-8">
                            <!-- Account details card-->
                            <div class="card mb-4">
                                <div class="card-header">Change Password</div>
                                <div class="card-body">
                                    <form asp-action="ChangePassword">
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <div class="form-group">
                                                <div class="mb-3">
                                                <label asp-for="CurrentPassword" class="small mb-1">Current Password</label>
                                                <input asp-for="CurrentPassword" class="form-control" />
                                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label asp-for="Password" class="small mb-1">New Password</label>
                                                <input asp-for="Password" class="form-control"/>
                                                 <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                            <!-- Form Group (confirm password)-->
                                            <div class="mb-3">
                                                <label class="small mb-1" asp-for="ConfirmPassword">Confirm Password</label>
                                                <input class="form-control" asp-for="ConfirmPassword" />
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Save" class="btn btn-primary" style="background-color: #456AD8;"/>
                                            </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
</div>